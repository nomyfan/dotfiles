{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "es2022",
    "target": "es2022",
    "types": ["./vite-env.d.ts"],
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
